		if(model.checkmate == true)
		{
			return;
		}
		if(model.stalemate == true)
		{
			return;
		}
		if(player == 1)
		{
			
		}
	}

	

	public void initialise(Model model, View view) {
		// TODO Auto-generated method stub
		this.model = model;
		this.view = view;
	}

}
